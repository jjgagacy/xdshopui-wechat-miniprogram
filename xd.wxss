/* 通用样式开始 */
page {
  background-color: #F6F6F6;
  color: #222;
  font-size: 28rpx;
}
text {
  font-family: MicroSoft Yahei;
}
view {
  font-family: MicroSoft Yahei;
  box-sizing: border-box;
}
image {
  vertical-align: top;
}
.xd-box {
  width: 750rpx;
}
.xd-outboxss {
  width: 750rpx;
  overflow: hidden;
}
.xd-one-line {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.xd-two-line {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.xd-floatr {
  float: right;
}
.xd-debug {
  background-color: lightblue;
}
.xd-floatl {
  float: left;
}
.xd-center {
  text-align: center;
}
.xd-flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.xd-flex-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.xd-top-30p {
  margin-top: 30%;
}
.xd-input-placeholder {
  color: #999;
  font-size: 24rpx;
  font-family: MicroSoft Yahei;
}
.xd-clear {
  display: block !important;
  clear: both !important;
  float: none !important;
  margin: 0 !important;
  padding: 0 !important;
  height: 0;
  line-height: 0;
  font-size: 0;
  overflow: hidden;
}
.xd-show {
  display: inline-block;
  color: #555;
  width: 178rpx;
  margin: 0 4rpx 0 0;
  white-space: nowrap;
  overflow: hidden;
}
.xd-hide {
  display: none;
}
.xd-kc {
  float: right;
  width: 50%;
  text-align: center;
}
.xd-full {
  width: 100%;
}
.xd-icon-list { 
  display: flex; 
  justify-content: space-around; 
  align-items: center; 
}
.xd-icon-list image {  
}
.xd-icon-label { 
  display: flex; 
  flex-flow: column; 
  align-items: center; 
}
.xd-icon-label image { 
  width: 42rpx; 
}
.xd-icon-label text { 
  margin-top: 26rpx; 
}
.xd-col-2 {
  display: flex; 
  justify-content:space-between; 
  align-items: center; 
}
.xd-pad { 
  padding: 24rpx; 
}
.xd-marg {
  margin: 24rpx;
}
.xd-icon-sm {
  width: 12rpx; 
}
.xd-size-big {
  font-size: 36rpx;
}
/* 通用样式结束 */

/* 组件样式 */
.xd-full-button, .xd-full-button:not([size='mini']) {
  width: 100%;
  margin-bottom: 24rpx;
}
.xd-button:after, .xd-full-button:after {
  border: none;
}
.xd-button {
  width: 280rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #FF6633;
  border-radius: 8rpx;
  font-weight: 500;
  color: #FFF;
  border: 1rpx solid #FF6633;
}
.xd-button.light {
  background-color: #ffffff;
  border: 1rpx solid #D9D9D9;
  color: #222;
}
.xd-button.secondary {
  background-color: #FCD000;
  border-color: #FCD000;
}
.xd-list {
  padding: 24rpx 0 24rpx 24rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.xd-list-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f3f3f3;
  margin-bottom: 20rpx;
}
.xd-list-row-txt {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  padding: 10rpx 0;
}
.xd-list-row-img {
  width: 36rpx;
  height: 36rpx;
  padding-right: 24rpx;
}
.xd-swiper-box{
  width: 750rpx;
  height: 518rpx;
}
.xd-swiper-box swiper{
  width: 750rpx;
  height: 518rpx;
}
.xd-swiper-box swiper image{
  width: 750rpx;
  height: 518rpx;
}
.xd-cat-search {
  display: flex;
  align-items: flex-start;
}
.xd-top-search {
  padding: 20rpx;
}
.xd-top-search input {
  border: none;
  background: #fff;
  border-radius: 24rpx;
  padding: 0rpx 35rpx;
  margin: 0;
  height: 60rpx;
}
.xd-cat-bd {
  display: flex;
  flex-flow: row;
  position: relative;
}
.xd-cat-list {
  width: 180rpx;
  background: #fff;
}
.xd-cat-con {
  margin-left: 15rpx;
  width: 540rpx;
}
.xd-cat-item { 
  padding: 23rpx 35rpx; 
  position: relative; 
  font-size: 24rpx; 
  overflow: hidden; 
}
.xd-cat-item.active { 
  background: #f3f6f5; 
  font-weight: 600; 
}
.xd-cat-item.active:before { 
  border: 7rpx solid #1BB693; 
  display: block; 
  height: 100%; 
  position: absolute;
  left: 0; 
  top: 0; 
  bottom: 0; 
  content: ' '; 
 }
/* 组件样式结束 */